<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="30px"
    android:paddingLeft="@dimen/margin_left"
    android:paddingRight="@dimen/margin_left"
    android:paddingBottom="@dimen/margin_left"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/rl_flag"
        android:layout_width="match_parent"
        android:layout_height="500px"
        app:cardCornerRadius="@dimen/round_corner"
        android:elevation="20px"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/timg"
            android:layout_margin="20px"
            android:scaleType="fitXY"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20px"
            android:gravity="right|top"
            >
            <LinearLayout
                android:layout_width="80px"
                android:layout_height="160px"
                android:background="#ff0000"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >
            <TextView
                android:id="@+id/tv_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="97"
                android:textSize="@dimen/text_size"
                android:textColor="#ffffff"
                android:layout_marginTop="20px"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="期"
                android:textSize="@dimen/text_size_notice"
                android:textColor="#ffffff"
                android:layout_below="@+id/tv_week"
                android:layout_centerHorizontal="true"
                />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="球星名称"
        android:textSize="@dimen/text_size"
        android:textColor="@color/font_main"
        android:layout_below="@+id/rl_flag"
        android:layout_marginTop="@dimen/margin_top"
        />
    <TextView
        android:id="@+id/tv_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="球队名称，所属球队名称"
        android:textSize="@dimen/text_size_notice"
        android:textColor="@color/font_gray"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="15px"
        />
</RelativeLayout>