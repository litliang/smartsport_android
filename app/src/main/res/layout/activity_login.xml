<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_marginTop="@dimen/margin_size_180"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_logo"/>

        <EditText
            android:id="@+id/login_edit_phone"
            android:layout_marginTop="@dimen/margin_size_160"
            android:layout_marginLeft="@dimen/margin_size_120"
            android:layout_marginRight="@dimen/margin_size_120"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_120"
            android:hint="手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:textColorHint="@color/text_hint"
            android:background="@null"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_45"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/text_gray"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px"/>

        <EditText
            android:id="@+id/login_edit_psd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_120"
            android:layout_marginLeft="@dimen/margin_size_120"
            android:layout_marginRight="@dimen/margin_size_120"
            android:layout_marginTop="@dimen/margin_size_60"
            android:background="@null"
            android:hint="密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:textColor="@color/text_black"
            android:textColorHint="@color/text_hint"
            android:textSize="@dimen/text_45" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/text_gray"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px"/>
        <TextView
            android:id="@+id/login_text_forget"
            android:layout_marginTop="50px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码?"
            android:textSize="@dimen/text_40"
            android:textColor="@color/theme_color"
            android:layout_gravity="right"
            android:layout_marginRight="60px"/>
        <Button
            android:id="@+id/login_btn_login"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginTop="66px"
            android:layout_marginRight="60px"
            android:layout_marginLeft="60px"
            android:background="@drawable/shape_bg_button"
            android:text="登  录"
            android:textColor="@color/white"
            android:textSize="@dimen/text_48" />
    </LinearLayout>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:orientation="horizontal"
            android:layout_marginBottom="60px">
            <TextView
                android:id="@+id/login_text_all_login"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="游客登录"
                android:gravity="center_vertical"
                android:layout_marginLeft="60px"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_40"/>

            <TextView
                android:id="@+id/login_text_reg"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="150px"
                android:layout_height="match_parent"
                android:text="注册新账户"
                android:gravity="right|center_vertical"
                android:layout_marginRight="60px"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_40"/>


        </LinearLayout>


</RelativeLayout>