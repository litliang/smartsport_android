<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size"
        android:text="没有网络，请刷新重试"
        android:layout_centerHorizontal="true"
        android:textColor="@color/font_gray"
        android:layout_centerInParent="true"
        />
    <ImageView
    android:id="@+id/iv_no_net"
    android:layout_width="250px"
    android:layout_height="250px"
    android:src="@mipmap/tuijian_touxiang6"
    android:layout_above="@+id/tv_notice"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="@dimen/margin_left"
    />

    <Button
        android:id="@+id/btn_refresh"
        android:layout_width="840px"
        android:layout_height="141px"
        android:background="@mipmap/icon_btn"
        android:layout_centerHorizontal="true"
        android:text="刷新"
        android:textColor="#ffffff"
        android:textSize="@dimen/text_size"
        android:layout_below="@+id/tv_notice"
        android:layout_marginTop="@dimen/margin_leftx3"
        />
</RelativeLayout>