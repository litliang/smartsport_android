<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginBottom="20px"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/bszb_detail_a_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher"/>

            <TextView
                android:id="@+id/bszb_detail_a_name"
                android:layout_marginTop="20px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="球队A名字"
                android:textSize="45px"
                android:textColor="@color/text_gray"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="20px"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/bszb_detail_num"
                android:layout_marginTop="20px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小组赛第一轮"
                android:textSize="38px"
                android:textColor="@color/text_gray"/>
            <TextView
                android:layout_marginTop="23px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在直播"
                android:textSize="78px"
                android:textColor="@color/theme_color"/>

            <TextView
                android:id="@+id/bszb_detail_time"
                android:layout_marginTop="12px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-12-12 18:00"
                android:textSize="38px"
                android:textColor="@color/text_gray"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="20px"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/bszb_detail_b_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher"/>

            <TextView
                android:id="@+id/bszb_detail_b_name"
                android:layout_marginTop="20px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="球队B名字"
                android:textSize="45px"
                android:textColor="@color/text_gray"/>
        </LinearLayout>



    </LinearLayout>
</LinearLayout>